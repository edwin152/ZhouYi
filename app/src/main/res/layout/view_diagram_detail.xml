<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/qian"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/qian_title"
        android:textColor="@android:color/black" />

    <com.edwin.zhouyi.widget.DiagramDoubleDetail
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fifthText="@string/qian_jiuwu"
        app:firstText="@string/qian_chujiu"
        app:fourthText="@string/qian_jiusi"
        app:secondText="@string/qian_jiuer"
        app:sixthText="@string/qian_shangjiu"
        app:thirdText="@string/qian_jiusan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/qian_yongjiu"
        android:textColor="@android:color/black" />
</LinearLayout>